            <%= image_tag "logo2.png",  class:"logoword" %>
          <% end %>
          <nav>
            <ul class= "nav__links">
                <li> <%= link_to "Home", root_path  %></li>
                <li> <%= link_to "Blockchain", blockchain_index_path  %></li>
                <li> <%= link_to "Web3.0", web3_index_path  %></li>
                <li> <%= link_to "Services", services_index_path  %></li>
                <li> <%= link_to "Partners", partners_index_path  %></li>
                <li> <%= link_to "About", about_index_path  %></li>
                <li> <%= link_to "Contact", contact_index_path  %></li>
            </ul>
          </nav>
      </div>



    <%= yield %>
  </body>
